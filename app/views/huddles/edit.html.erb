<h3>Nominate</h3>

<%= form_tag(add_restaurant_huddle_path(@huddle), method: :put, class: "nom-form") do %>
	<% (0..20).each do |i| %>
		<%= text_field_tag "restaurant_url_#{i}", '', placeholder: 'Enter restaurant url from Yelp', data: {endless: 1}, class: "restaurant-input" %>
	<% end %>
	<%= submit_tag 'Nominate' %>
<% end %>

<% if @huddle.nominations and @huddle.nominations.length > 0 %>
	<h3>Nominations so far</h3>
	<% @huddle.nominations.each do |nom| %>
		<%= link_to nom.name, nom.url, rel: "shadowbox", title: nom.name, class: "nom-link" %>
	<% end %>
<% end %>


<%= link_to "Done Adding Restaurants", invite_voters_huddle_path(@huddle) %>